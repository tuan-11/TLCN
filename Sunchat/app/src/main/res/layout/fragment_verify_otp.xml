<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="verifyOTPViewModel"
            type="hcmute.edu.vn.chatapp.viewmodels.VerifyOTPViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.Fragment.VerifyOTPFragment">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.CardView.Filled"
            app:cardBackgroundColor="@color/tertiaryContainer_Dark"
            app:cardCornerRadius="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vui lòng không chia sẻ mã xác thực để tránh mất tài khoản"
                android:textSize="12sp"
                android:textColor="#000000"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/fontawesome_pro_thin100"
                android:gravity="center_vertical"
                android:text="\ue10c"
                android:textColor="@color/blue"
                android:textSize="70sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <TextView
            android:id="@+id/notification_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã gửi mã đến số "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xin kiểm tra SMS và điền mã xác nhận bên dưới"
            android:gravity="center"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/input_code_1"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/input_code_2"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/input_code_3"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/input_code_4"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/input_code_5"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/input_code_6"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <TextView
            android:id="@+id/resend_otp_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi lại mã"
            android:padding="15dp"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:gravity="center"
            />
    </LinearLayout>
</layout>