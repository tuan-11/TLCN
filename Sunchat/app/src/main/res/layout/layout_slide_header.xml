<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="0.6">
    <RelativeLayout
        android:id="@+id/slide_app_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunchat"
            android:textColor="@color/dots_color"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:visibility="visible">
        <ImageView
            android:id="@+id/slide_image"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/video_call_slide"
            android:alpha="0.7"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">
        <TextView
            android:id="@+id/slide_featuer_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gọi video ổn định"
            android:gravity="center|bottom"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dots_color" />

        <TextView
            android:id="@+id/slide_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trò chuyện thật đã với chất lượng video ổn định mọi lúc, mọi nơi"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="16sp"
            />
    </LinearLayout>


</LinearLayout>